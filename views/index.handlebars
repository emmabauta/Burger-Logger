<h1>Burger Time!</h1>

<h2>Burgers to be eaten:</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burgers-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burgers-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add another burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id= "burger" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Eat or Save?</label><br>
    <input type="radio" name="devour" value="1" checked> Eat now<br>
    <input type="radio" name="devour" value="0"> Eat later
  </div>

  <button type="submit">Add Burger</button>
</form>
